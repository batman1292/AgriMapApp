    L.control.layers(baseLayers, overlays).addTo(map);

    function changeLayer(layer){
      if(layer === 1){
        if(map.hasLayer(amphureLayer)){
          map.removeLayer(amphureLayer);
        }else{
          map.addLayer(amphureLayer);
        }
      }else if(layer === 2){
