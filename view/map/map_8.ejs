          map.removeLayer(roadLayer);
        }else{
          map.addLayer(roadLayer);
        }
      }else if(layer === 4){
        if(map.hasLayer(riverLayer)){
          map.removeLayer(riverLayer);
          map.removeLayer(riverGridUrl);
        }else{
          map.addLayer(riverLayer);
          map.addLayer(riverGridUrl);
        }
      }else if(layer === 5){
